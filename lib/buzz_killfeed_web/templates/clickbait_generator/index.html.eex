<div.jumbotron>
    <div id="clickbait" class="clickbait-area">
        <h1 id="headline"><%= @headline %></h1>
        <div id="clickbait-buttons">
            <%= for button_type <- button_types() do %>
                <%= render("button.html", button_type: button_type) %>
            <% end %>
        </div>
        <div class="ladom" style="display: none"/>
        <div class="share">
            <button class="button sparkley xs" id="manual-ajax">Share Permalink</button>
        </div>
    </div>
</div.jumbotron>
